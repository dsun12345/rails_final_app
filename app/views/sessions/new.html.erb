<%= form_tag('/login', method: :post) do %>

  <div class="form-group">
    <%= label_tag(:name, "Name:") %>
    <%= text_field_tag(:name) %>
  </div>

  <div class="form-group">
    <%= label_tag(:email, "Email:") %>
    <%= text_field_tag(:email) %>
  </div>
  
  <div class="form-group">
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %>
  </div>

  <div class="actions">
    <%= submit_tag("Sign In") %>
  </div>

<% end %>